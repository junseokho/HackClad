generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id @default(cuid())
  username            String   @unique
  passwordHash        String
  nickname            String
  selectedCharacterId String?
  createdAt           DateTime @default(now())

  selectedCharacter   Character? @relation(fields: [selectedCharacterId], references: [id])
  decks               Deck[]
}

model Character {
  id          String   @id @default(cuid())
  code        String   @unique
  name        String
  description String
  imageUrl    String?
  createdAt   DateTime @default(now())

  users       User[]
  cardPool    CharacterCard[]
  decks       Deck[]
}

model Card {
  id          String   @id @default(cuid())
  code        String   @unique
  name        String
  description String
  costMP      Int      @default(0)
  tags        String   @default("")
  effectJson  String   @default("{}")
  createdAt   DateTime @default(now())

  characterPools CharacterCard[]
  deckCards      DeckCard[]
}

model CharacterCard {
  id          String   @id @default(cuid())
  characterId String
  cardId      String
  isStarter   Boolean  @default(false)

  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  card        Card      @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@unique([characterId, cardId])
}

model Deck {
  id          String   @id @default(cuid())
  userId      String
  characterId String
  name        String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  cards       DeckCard[]

  @@index([userId, characterId])
}

model DeckCard {
  id      String @id @default(cuid())
  deckId  String
  cardId  String
  count   Int    @default(1)

  deck    Deck @relation(fields: [deckId], references: [id], onDelete: Cascade)
  card    Card @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@unique([deckId, cardId])
}
